                <i class="iconfont icon-xiangshangjiantou" style="color:#FF9C35" 
                bindtap="widgetsToggle"></i>
                <view class="widgets__list {{contentShow ? 'widgets__list_show' : ''}}">
                    <navigator url='../videos/videos' class="widget">
                        <text class="widgets__info-name">小学五年级-语文</text>
                        <view class="widget__line"></view>
                    </navigator>
                    <navigator url='../videos/videos' class="widget">
