                    </navigator>
                    <navigator url="component-pages/wx-swiper/wx-swiper" class="widget">
                        <text class="widget__name">swiper</text>
                    </navigator>
                </view>
            </view>
            <view class="widgets__item">
                <view id="content" class="widgets__info {{contentShow ? 'widgets__info_show' : ''}}" bindtap="gocourse">
                    <image class="widgets__info-img" src="../../images/2.png"  
